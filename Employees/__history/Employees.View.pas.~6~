unit Employees.View;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  Common.Form, FMX.StdCtrls, FMX.Controls.Presentation,
  Employees.ViewModel,
  EmployeesReg.View;

type
  TfrmEmployees = class(TCommonForm)
    btn1: TButton;
    procedure btn1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    FViewModel: TEmployeesViewModel;
    { Private declarations }
  public
    property ViewModel: TEmployeesViewModel read FViewModel;
    { Public declarations }
  end;

var
  frmEmployees: TfrmEmployees;

implementation

{$R *.fmx}

procedure TfrmEmployees.btn1Click(Sender: TObject);
begin
  inherited;
  frmEmployeesReg := TfrmEmployeesReg.Create(Self, FViewModel);
end;

procedure TfrmEmployees.FormCreate(Sender: TObject);
begin
  inherited;
  FViewModel := TEmployeesViewModel.Create;
end;

end.
