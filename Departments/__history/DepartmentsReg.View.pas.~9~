unit DepartmentsReg.View;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  Common.Form, FMX.Edit, FMX.StdCtrls, FMX.Controls.Presentation,
  Departments.Classes, Departments.ViewModel;

type
  TfrmDepartmentsReg = class(TCommonForm)
    lbl1: TLabel;
    lbl2: TLabel;
    lbl3: TLabel;
    lbl4: TLabel;
    edtID: TEdit;
    edtTitle: TEdit;
    edtIsActive: TEdit;
    edtUpdtm: TEdit;
    procedure FormShow(Sender: TObject);
  private
    FViewModel: TDepartmentsViewModel;
    { Private declarations }
  public
    { Public declarations }
    property ViewModel: TDepartmentsViewModel read FViewModel write FViewModel;
  end;

var
  frmDepartmentsReg: TfrmDepartmentsReg;

implementation

{$R *.fmx}

procedure TfrmDepartmentsReg.FormShow(Sender: TObject);
begin
//  inherited;

  edtID.Text        := FViewModel.Department.ID.ToString;
  edtTitle.Text     := FViewModel.Department.Title;
  edtIsActive.Text  := FViewModel.Department.IsActive.ToString();
  edtUpdtm.Text     := DateTimeToStr(FViewModel.Department.UpdateTime);
end;

end.
